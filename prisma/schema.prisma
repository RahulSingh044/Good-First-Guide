generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum STATUS {
  STARTED
  PR_OPENED
  MERGED
  PR_CLOSED
}

model User {
  id          String   @id @default(uuid())
  firebaseUid String   @unique
  email       String   @unique
  name        String
  photoUrl    String
  createdAt   DateTime @default(now())

  // relations
  issues        Issue[]
  notifications Notification[]
  bookmarks     Bookmark[]
  prs           PR[]
  contributions contribution[]
}

model Issue {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  githubUserName String
  issueNumber    String
  issueTitle     String
  status         STATUS
  startedAt      DateTime @default(now())

  gitDiffs      GitDiff[]
  prs           PR[]
  contributions contribution[]

  @@unique([githubUserName, issueNumber])
  @@index([userId])
}

model PR {
  id String @id @default(uuid())

  issueId String
  issue   Issue  @relation(fields: [issueId], references: [id], onDelete: Cascade)

  gitDiffId String  @unique
  gitDiff   GitDiff @relation(fields: [gitDiffId], references: [id])

  prdata String @db.Text // title + body (markdown)

  status    STATUS
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  contributions contribution[]

  @@index([issueId])
}

model GitDiff {
  id String @id @default(uuid())

  issueId String
  issue   Issue  @relation(fields: [issueId], references: [id], onDelete: Cascade)

  repoOwner String
  repoName  String

  diff String @db.Text

  filesChanged String[]
  insertions   Int?
  deletions    Int?

  createdAt DateTime @default(now())

  prs PR[]

  @@index([issueId])
  @@index([repoOwner, repoName])
}

model Notification {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  type      String
  message   String
  meta      Json?
  read      Boolean   @default(false)
  readAt    DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId])
  @@index([read])
}

model Bookmark {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  itemId       String
  title        String?
  repository   String
  description  String
  stars        Int
  url          String
  isBookmarked Boolean  @default(true)
  createdAt    DateTime @default(now())

  @@unique([userId, itemId])
  @@index([userId])
}

enum contributionStatus {
  PENDING
  PROGRESS
  COMPLETED
}

model contribution {
  id      String  @id @default(uuid())
  userId  String
  issueId String
  prId    String?

  status contributionStatus @default(PENDING)

  //relationship
  user  User  @relation(fields: [userId], references: [id])
  issue Issue @relation(fields: [issueId], references: [id])
  pr    PR?   @relation(fields: [prId], references: [id])

  @@index([userId])
}
